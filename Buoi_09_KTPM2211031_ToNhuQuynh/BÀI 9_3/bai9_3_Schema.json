{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "id",
    "name",
    "age",
    "email",
    "address",
    "courses",
    "createdAt",
    "role"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^U\\d{5}$"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50
    },
    "age": {
      "type": "integer",
      "minimum": 10,
      "maximum": 18
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "isActive": {
      "type": "boolean"
    },
    "address": {
      "type": "object",
      "required": ["city", "district", "street"],
      "properties": {
        "city": { "type": "string" },
        "district": { "type": "string" },
        "street": { "type": "string" },
        "postalCode": { "type": "string", "pattern": "^[0-9]{6}$" }
      }
    },
    "courses": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "score", "teacher"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "score": { "type": "number", "minimum": 0, "maximum": 10 },
          "teacher": {
            "type": "object",
            "required": ["name", "email"],
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string", "format": "email" }
            }
          }
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "role": {
      "type": "string",
      "enum": ["student", "teacher", "admin"]
    }
  },
  "additionalProperties": false
}
